{
  "detailToolBar": {
    "key": "detailToolBar",
    "items": [
      {
        "key": "new",
        "icon": "add",
        "shortcut": "control.alt.n"
      },
      {
        "key": "save",
        "disableExpr": "host.config.readOnly",
        "shortcut": "control.s"
      },
      {
        "key": "delete",
        "disableExpr": "host.config.readOnly || !host.currentEntity || !host.currentEntity.viewModelId",
        "shortcut": "control.d"
      },
      {
        "key": "close",
        "shortcut": "control.x",
        "hideExpr": "!host.isInDialog"
      }
    ]
  },
  "listToolBar": {
    "key": "listToolBar",
    "items": [
      {
        "key": "new",
        "icon": "add",
        "shortcut": "control.alt.n",
        "disableExpr": "host.config.readOnly"
      },
      {
        "key": "edit",
        "shortcut": "control.e",
        "disableExpr": "host.config.readOnly || !host.selectedEntity "
      },
      {
        "key": "delete",
        "shortcut": "control.d",
        "disableExpr": "host.config.readOnly "
      },
      "-",
      {
        "key": "refresh",
        "shortcut": "control.r"
      },
      {
        "key": "close",
        "shortcut": "control.x",
        "hideExpr": "!host.isInDialog"
      }
    ]
  },
  "addRemoveToolBar": {
    "key": "addRemoveToolBar",
    "items": [
      {
        "key": "add",
        "icon": "add"
      },
      {
        "key": "delete",
        "icon": "delete"
      }
    ]
  }
}
